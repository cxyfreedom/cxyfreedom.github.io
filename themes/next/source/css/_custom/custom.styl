// Custom styles.
// 文章内链接文本样式
.post-body p a {
  color: #0593d3;
  border-bottom: none;
  border-bottom: 1px solid #0593d3;
  &:hover {
    color: #fc6423;
    border-bottom: none;
    border-bottom: 1px solid #fc6423;
  }
}

// 自定义代码样式
code {
  color: #ff7600;
  background: #fbf7f8;
  margin: 2px;
}

// 大代码块的自定义样式
.highlight, pre {
  overflow: auto;
  margin: 20px 0;
  padding: 0;
  font-size: 13px;
}

.highlight, code, pre {
  border: 1px solid #d6d6d6;
}

// 主页文章添加阴影效果
.post {
//margin-top: 60px;
  margin-bottom: 20px;
  padding: 45px 36px 36px 36px;
  -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
  -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}

// 去除在页面文章之间的分割线
.posts-expand .post-eof {
  margin: 0;
  background-color: rgba(255, 255, 255, 0);
}

// 顶部加载条自定义样式
.pace .pace-progress {
  background: #0593d3; /*进度条颜色*/
  height: 3px;
}

.pace .pace-progress-inner {
  box-shadow: 0 0 10px #0593d3, 0 0 5px #0593d3; /*阴影颜色*/
}

.pace .pace-activity {
  border-top-color: #0593d3; /*上边框颜色*/
  border-left-color: #0593d3; /*左边框颜色*/
}

// 页面头部背景
.header {
  background: url(http://p64urweu3.bkt.clouddn.com/banner.png);
}

// 标题
.site-title {
  font-size: 40px;
  font-weight: bold;
  text-shadow: 2px 2px 4px #000;
}

// 子标题
.site-subtitle {
  font-size: 15px;
  color: white;
  text-shadow: 2px 2px 4px #000;
}

// 标题背景
.brand {
  background: transparent;
}

// 菜单栏
.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
  background: rgba(240, 240, 240, 0.5);
  margin-left: auto;
  margin-right: auto;
  width: 530px;
  border-radius: initial;
  -webkit-box-shadow: 0 0 15px #590016;
}

// 菜单图表链接 以及 超链接样式
a {
  color: rgba(0, 0, 0, 0.8);
}

a:hover {
  color: #ff106c;
  border-bottom-color: #ff106c;
}

// 菜单字体大小
.menu .menu-item a {
  font-size: 14px;
}

.menu .menu-item a:hover {
  border-bottom-color: #ff106c;
}

// 站点描述
.site-description {
  font-size: 16px;
}

// 头部inner
.header-inner {
  padding: 45px 0 25px;
  width: 700px;
}

